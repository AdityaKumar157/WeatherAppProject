<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    {{!-- Navigation bar --}}
    {{>navbar}}

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" id="submitBtn" value="Search"> 
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Saturday</p>
                        <p id="today_date">10 June</p>
                    </div>

                    <div class="main_layer">
                        <p id="city_name">Patna</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span>0</span> <sup>0</sup></p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
    {{>footer}}

    <script src="js/main.js"></script>
</body>

</html>